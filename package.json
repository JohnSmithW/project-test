{
  "name": "npm-automation-env",
  "version": "1.0.9",
  "description": "",
  "main": "index.js",
  "watch": {
    "validate-html": {
      "patterns": [
        "src"
      ],
      "extensions": "html",
      "quiet": true,
      "legacyWatch": true
    },
    "stylelint": {
      "patterns": [
        "src"
      ],
      "extensions": "css"
    },
    "jshint": "src/"
  },
  "scripts": {
    "server": "live-server src",
    "server-build": "live-server build",
    "validate-html": "html-validate src",
    "stylelint": "stylelint src/**/*.css",
    "jshint": "jshint src/",
    "watch": "npm-watch",
    "dev-mode": "npm-run-all --parallel server watch",
    "postinstall": "npm i -g live-server html-validate jshint",
    "test": "mocha src/tests/",
    "build": "webpack",
    "build-dev-mode": "npm-run-all jshint validate-html stylelint build server-build",
    "deploy": "gh-pages -d build"
  },
  "author": "Kalagin Ivan",
  "license": "ISC",
  "devDependencies": {
    "chai": "^4.2.0",
    "gh-pages": "^2.2.0",
    "mocha": "^7.1.1",
    "npm-run-all": "^4.1.5",
    "npm-watch": "^0.6.0",
    "postcss-loader": "^3.0.0",
    "style-loader": "^1.1.3",
    "stylelint": "^12.0.0",
    "stylelint-config-standard": "^19.0.0",
    "webpack": "^4.41.5",
    "webpack-cli": "^3.3.10",
    "webpack-merge": "^4.2.2"
  },
  "dependencies": {
    "autoprefixer": "^9.7.4",
    "clean-webpack-plugin": "^3.0.0",
    "css-loader": "^3.4.2",
    "cssnano": "^4.1.10",
    "html-replace-webpack-plugin": "^2.5.6",
    "html-webpack-plugin": "^3.2.0",
    "lodash": "^4.17.21",
    "mini-css-extract-plugin": "^0.9.0",
    "underscore-template-loader": "^1.0.0"
  }
}